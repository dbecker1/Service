{% extends 'MaclayServiceBundle:Profile:profile.html.twig' %}

{% form_theme form _self %}

{% block pagename %}
    Student Profile - New Record
{% endblock %}
    
{% block form_row %}
    {% spaceless %}
        <div class="row">
            <div class="col-sm-2">
                {{form_label(form) }}
            </div>
            <div class="col-sm-3 form-group">
                {{form_widget(form) }}
            </div>
            <div class="col-sm-5 error-text">
                {{ form_errors(form) }}
            </div>
        </div>
        <br />
    {% endspaceless %}
{% endblock %}   

{% block usercontent %}
    <div id="newRecord" class="row">
        {{ form_start(form) }}
            {{ form_row(form.dateFrom, {'label' : 'Date From'})}}
            {{ form_row(form.dateTo, {'label' : 'Date To'})}}
            {{ form_row(form.numHours, {'label' : 'Number of Hours'})}}
        {{ form_end(form)}}
    </div>

{% endblock %}

        
