{% extends 'MaclayServiceBundle:Profile:studentProfile.html.twig' %}

{% form_theme form _self %}

{% block pagename %}
    {{parent()}} - New Record
{% endblock %}
    
{% block form_row %}
    {% spaceless %}
        <div class="row">
            <div class="col-sm-2">
                {{form_label(form) }}
            </div>
            <div class="col-sm-4">
                {{form_widget(form) }}
            </div>
        </div>
        <br />
    {% endspaceless %}
{% endblock %}    

{% block studentcontent %}
    <div class="row">
        {{ form_start(form) }}
            {{ form_row(form.dateFrom, {'label' : 'Date From'})}}
            {{ form_row(form.dateTo, {'label' : 'Date To'})}}
            {{ form_row(form.numHours, {'label' : 'Number of Hours'})}}
        {{ form_end(form)}}
    </div>

{% endblock %}
