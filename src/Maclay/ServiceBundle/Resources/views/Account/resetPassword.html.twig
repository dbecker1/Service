{% extends '::layout.html.twig' %}

{% block pagename %}
    Forgot Password
{% endblock %}

{% form_theme form _self %}
    
{% block form_row %}
    {% spaceless %}
        <div class="row">
            <div class="col-sm-2">
                {{form_label(form) }}
            </div>
            <div class="col-sm-3 form-group">
                {{form_widget(form) }}
            </div>
            <div class="col-sm-5 error-text">
                {{ form_errors(form) }}
            </div>
        </div>
        <br />
    {% endspaceless %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-sm-3"></div>
            <div class="col-sm-9">
                <p>{{ error|default("Enter a new password below") }}</p>
                {{ form(form) }}
            </div>
        </div>
    </div>

{% endblock %}

